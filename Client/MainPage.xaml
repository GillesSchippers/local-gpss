<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GPSS_Client.MainPage"
             Title="Local GPSS Explorer">

    <VerticalStackLayout Padding="20" Spacing="12">
        <Label Text="API URL:" FontAttributes="Bold"/>
        <HorizontalStackLayout>
            <Entry x:Name="ApiUrlEntry" WidthRequest="300"/>
            <Button Text="Save" Clicked="OnSaveApiUrlClicked"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout Spacing="8">
            <Button Text="Upload Pokémon" Clicked="OnUploadPokemonClicked"/>
            <Button Text="Upload Bundle" Clicked="OnUploadBundleClicked"/>
            <Button Text="Check Legality" Clicked="OnCheckLegalityClicked"/>
            <Button Text="Legalize Pokémon" Clicked="OnLegalizePokemonClicked"/>
        </HorizontalStackLayout>

        <Button Text="Search Pokémon" Clicked="OnSearchClicked"/>
        <CollectionView x:Name="ResultsView" HeightRequest="300" SelectionMode="Multiple">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="Gray" Margin="2" Padding="4">
                        <VerticalStackLayout>
                            <Label Text="{Binding Code}" FontAttributes="Bold"/>
                            <Label Text="{Binding Generation}" FontSize="12"/>
                            <Label Text="{Binding Legal, StringFormat='Legal: {0}'}" FontSize="12"/>
                            <Button Text="Download" Clicked="OnDownloadClicked"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
